<div class="page-width">
  <div id="description" class="twcss-w-full twcss-mx-auto twcss-p-10 ">
  <h2 class=" twcss-text-4xl twcss-leading-relaxed">{{product.description}}</h2>
  </div>
  <div id="the_acc" class="twcss-space-y-6">
    <div class="twcss-flex twcss-mx-auto twcss-mt-10 "> 
    <!-- Accordion -->
      <div id="description_details" x-data="{ expanded: true}"  role="region" class=" twcss-w-full twcss-border twcss-border-slate-400">
        <h2 class="">
          <button @click="expanded = !expanded" class="twcss-flex twcss-items-center twcss-justify-between twcss-w-full twcss-px-8 twcss-py-8 twcss-font-bold twcss-text-2xl  twcss-bg-slate-100 ">
            <span >Product Description</span>
            <span x-show=" expanded" aria-hidden="true" class=" twcss-ml-4">&minus;</span>
            <span x-show=" !expanded" aria-hidden="true" class=" twcss-ml-4">&plus;</span>
          </button>
        </h2>
      <div x-show="expanded" class="twcss-pb-4 twcss-pt-6 twcss-px-6 twcss-w-full twcss-flex twcss-flex-col md:twcss-flex-row" x-collapse>
        <div class=" twcss-flex twcss-flex-col twcss-md:w-2/3 twcss-py-5 twcss-pr-10 twcss-pl-5 twcss-pt-10"> XYZ
        </div>
        <div class="twcss-flex twcss-flex-col twcss-md:twcss-w-1/3 twcss-p-5" > 
          
      {% if product.metafields["custom"]["dhm_promos_parts"] != blank %}
      {% assign part_collection = product.metafields["custom"]["dhm_promos_parts"] %}
      {% assign part_collection_len = collections[part_collection].all_products_count %}
      <h3 class=" twcss-text-3xl twcss-mb-8">{{ collections[part_collection].title }}</h3>
      {% comment %} Remove this later:<h4>Total Products in this Collection: {{ collections[part_collection].all_products_count }}</h4> {% endcomment %}
      <ul role="list" class="divide-y divide-gray-300">
      {% for product in collections[part_collection].products  limit:5 %}
        <li class="twcss-flex twcss-gap-x-4 twcss-py-5">
          <img class="twcss-size-32 twcss-flex-none  twcss-border" src="{{product.featured_image | img_url: 'small'}}" alt="{{product.featured_image.alt}}">
          <div class="twcss-min-w-0">
            <p class="twcss-text-2xl twcss-font-semibold twcss-text-gray-900">
              <a href="{{product.url}}" class="hover:twcss-text-lime-700">{{product.title}}</a>
            </p>
            <p class="twcss-mt-1 twcss-text-2xl twcss-text-gray-500">
              {{product.price | money}}
            </p>
          {% comment %}
            shorten product names: twcss-truncate 
          {% endcomment %}
          </div>
        </li>
     {% endfor %}
     </ul>
     {% comment %}
      only show this button if there are more that this limit
     {% endcomment %}
     {% assign max_prods = 4 %}
     {% if max_prods < part_collection_len %}
     
      <a href="/collections/{{part_collection}}" class=" twcss-bg-lime-600 twcss-text-white twcss-p-10 twcss-flex twcss-items-center twcss-justify-center twcss-text-3xl twcss-mt-5 twcss-text-center">
      <span>View All Parts for {{product.metafields["custom"].dhm_general_product_model|  metafield_text}} </span></a>
     {% endif %}
     {% else %}
     <h3 class="twcss-text-3xl twcss-mb-8">Popular Products</h3>
     <ul role="list" class="divide-y divide-gray-300">
      {% for product in collections["all-products"].products  limit:5 %}
        <li class="twcss-flex twcss-gap-x-4 twcss-py-5">
          <img class="twcss-size-32 twcss-flex-none  twcss-border" src="{{product.featured_image | img_url: 'small'}}" alt="{{product.featured_image.alt}}">
          <div class="twcss-min-w-0">
            <p class="twcss-text-2xl twcss-font-semibold twcss-text-gray-900">
              <a href="{{product.url}}" class="hover:twcss-text-lime-700">{{product.title}}</a>
            </p>
            <p class="twcss-mt-1 twcss-text-2xl twcss-text-gray-500">
              {{product.price | money}}
            </p>
          {% comment %}
            shorten product names: twcss-truncate 
          {% endcomment %}
          </div>
        </li>
     {% endfor %}
     </ul>
    {% endif %}
    </div>
  </div>

  </div>
</div>

      <!-- end acccordion 1 above -->

   <div class="twcss-flex twcss-mx-auto twcss-mt-10  "> 
    <!-- Accordion 2 -->
    <div id="description" x-data="{ expanded: false}" role="region" class=" twcss-w-full twcss-border twcss-border-slate-400">
      <h2>
      <button @click="expanded = !expanded" class="twcss-flex twcss-items-center twcss-justify-between twcss-w-full twcss-px-8 twcss-py-8 twcss-font-bold twcss-text-2xl twcss-bg-slate-100">
        <span >Product Specifications</span>
        <span x-show=" expanded" aria-hidden="true" class=" twcss-ml-4">&minus;</span>
        <span x-show="!expanded" aria-hidden="true" class=" twcss-ml-4">&plus;</span>
    </button>
  </h2>
  <div x-show="expanded" class="twcss-pb-4 twcss-px-6 " x-collapse>
{% render 'product-specs' product %}
  </div>

    </div>
  </div>
  </div>
  <!-- end all acccordion above -->

</div>