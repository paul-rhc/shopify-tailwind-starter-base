{% assign product_specs = "
-- Promos : dhm_promos ,
-- Free Gift : dhm_promos_free_gift ,
-- Product Type : dhm_general_product_type ,
-- PDF Files : dhm_resources_pdf_files ,
-- Mask Sizing Guide PDF : dhm_sleep_mask_sizing_guide_pdf ,

DHM Neb - Liter Flow : dhm_nebulizer_liter_flow ,
DHM Neb - Pressure : dhm_nebulizer_pressure ,
DHM Neb - Nebulization Rate : dhm_nebulizer_nebulization_rate ,
DHM Neb - Median Diameter : dhm_nebulizer_median_diameter ,
DHM Neb - Modes of Operation : dhm_nebulizer_modes_of_operation ,
DHM Neb - Capacity : dhm_nebulizer_capacity ,
DHM Neb - Treatment Time : dhm_nebulizer_treatment_time ,
DHM Res - Videos : dhm_resources_videos ,
DHM Neb - Respirable Fraction : dhm_nebulizer_respirable_fraction ,

" %}
{% assign product_specs_split = product_specs | split: ',' %}
{% assign path = product.metafields.custom %}

 <h3 class="twcss-px-6  twcss-py-8  twcss-font-semibold twcss-text-primaryGreen  twcss-text-2xl ">
        LEFTOVERS
</h3>
<div class="twcss-border-t twcss-border-gray-200 px">
  <dl class="twcss-divide-y twcss-divide-gray-200 ">

{% for spec in product_specs_split %}
    {% assign spec_parts = spec | split: ":" %}
    {% assign spec_name = spec_parts[0] | strip %}
    {% assign spec_handle = spec_parts[1] | strip %}

    {% if product.metafields.custom[spec_handle] %}
      <div class=" twcss-px-6  twcss-py-3 md:twcss-grid md:twcss-grid-cols-3 md:twcss-gap-4 ">
        <dt class="twcss-font-bold twcss-text-gray-900  term">{{spec_name}}</dt>
        <dd class="twcss-mt-1  twcss-text-gray-700 md:twcss-col-span-2 md:twcss-mt-0">{{path[spec_handle]| metafield_tag}}</dd>
      </div>
    {% endif %}
{% endfor %}
  </dl>
</div>