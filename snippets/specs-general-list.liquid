{% assign general_specs = "
In the Package : dhm_general_in_the_box ,
Part Numbers : dhm_general_part_numbers ,
HCPCS Code : dhm_general_hcpcs ,
GTIN Number(s) : dhm_general_gtins ,
Warranty : dhm_promos_warranty ,
Risk Free Trial : dhm_promos_risk_free_trial ,
Intended Use : dhm_general_intended_use ,
Prescription Item : dhm_general_rx_required ,
Typical Country of Origin : dhm_general_country ,
Compatibility : dhm_general_compatibility ,
Notes : dhm_general_notes ,
" %}
{% assign general_specs_split = general_specs | split: ',' %}
{% assign path = product.metafields.custom %}

 <h3 class="twcss-px-6  twcss-py-8  twcss-font-semibold twcss-text-primaryGreen twcss-uppercase twcss-text-2xl ">
        Product Information
</h3>
<div class="twcss-border-t twcss-border-gray-200 px">
  <dl class="twcss-divide-y twcss-divide-gray-200 ">
      <div class=" twcss-px-6  twcss-py-6 md:twcss-grid md:twcss-grid-cols-3 md:twcss-gap-4 ">
        <dt class="twcss-mt-1  twcss-text-xl  twcss-font-bold twcss-text-gray-900 twcss-uppercase term">Manufacturer</dt>
        <dd class="twcss-mt-1  twcss-text-gray-700 md:twcss-col-span-2 md:twcss-mt-0"><a href="https://directhomemedical.com/collections/all-products?filter.p.vendor={{ product.vendor }}&sort_by=best-selling">{{ product.vendor }}<a/></dd>
      </div>
    <div class=" twcss-px-6  twcss-py-6 md:twcss-grid md:twcss-grid-cols-3 md:twcss-gap-4 ">
        <dt class="twcss-mt-1  twcss-text-xl  twcss-font-bold twcss-text-gray-900 twcss-uppercase term">Product Model</dt>
        <dd class="twcss-mt-1  twcss-text-gray-700 md:twcss-col-span-2 md:twcss-mt-0"><a href="https://directhomemedical.com/search?{{ product.metafields.custom.dhm_general_product_model }}">{{ product.metafields.custom.dhm_general_product_model }}</a></dd>
      </div>
{% for spec in general_specs_split %}
    {% assign spec_parts = spec | split: ":" %}
    {% assign spec_name = spec_parts[0] | strip %}
    {% assign spec_handle = spec_parts[1] | strip %}

    {% if product.metafields.custom[spec_handle] %}
      <div class=" twcss-px-6  twcss-py-6 md:twcss-grid md:twcss-grid-cols-3 md:twcss-gap-4 ">
        <dt class="twcss-mt-1  twcss-text-xl  twcss-font-bold twcss-text-gray-900 twcss-uppercase term">{{spec_name}}</dt>
        <dd class="twcss-mt-1  twcss-text-gray-700 md:twcss-col-span-2 md:twcss-mt-0">{{path[spec_handle]| metafield_tag}}</dd>
      </div>
    {% endif %}
{% endfor %}
  </dl>
</div>